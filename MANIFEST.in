# Include documentation and license
include README.md
include LICENSE.txt

# Include all obfuscated Python files
recursive-include payme *.py

# Include PyArmor runtime files
recursive-include pyarmor_runtime_* *
global-include pyarmor_runtime_*/*.so
global-include pyarmor_runtime_*/*.pyd
global-include pyarmor_runtime_*/*.dll
global-include pyarmor_runtime_*/__init__.py

# Exclude development and test files
exclude makefile
exclude tests.py
exclude tests_settings.py
recursive-exclude tests *
recursive-exclude scripts *
recursive-exclude requirements *
recursive-exclude .github *

# Exclude cache and build files
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *$py.class
global-exclude .DS_Store

